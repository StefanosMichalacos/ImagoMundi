@model ImagoMundi.Controllers.SearchController.SearchString
<ul class="nav navbar-nav position_of_menu secondrowmenu">
    <li>
        <form method="post">
            <div class="d-flex justify-content-center h-100">
                <div class="searchbar">

                    <input asp-for="SearchS" class="search_input" type="text" placeholder="Search...">
                    <button type="submit" asp-controller="Search" asp-action="Results" class="search_icon"><i class="fa fa-search searchIconBar"></i></button>
                </div>
            </div>
        </form>
    </li>
    <li class="dropdown">
        <a class="dropdown-toggle whiteColored dropbtn" asp-area="" asp-controller="ViewProducts" asp-action="Maps">
            Maps
            <span class="caret"></span>
        </a>
        <ul class="dropdown-content dropdown-menu">
            @foreach (var type in ViewData["MapTypes"] as IList<MapType>)
            {
                <li><a asp-area="" asp-controller="ViewProducts" asp-action="Maps" asp-route-MapTypeId="@type.Id" class="whiteColored">@type.Name</a></li>
            }
        </ul>
    </li>
    <li class="dropdown">
        <a class="dropdown-toggle whiteColored dropbtn" asp-area="" asp-controller="ViewProducts" asp-action="Globes">
            Globes
            <span class="caret"></span>
        </a>
        <ul class="dropdown-content dropdown-menu">
            @foreach (var type in ViewData["Materials"] as IList<Material>)
            {
                <li><a asp-area="" asp-controller="ViewProducts" asp-action="Globes" asp-route-MaterialId="@type.Id" class="whiteColored">@type.Name</a></li>
            }
        </ul>
    </li>
    <li><a href="#" class="whiteColored">Custom Maps</a></li>
    <li><a href="#" class="whiteColored">About Map</a></li>
    <li>
        @*<button type="button" class="whiteColored cartButton">
            Cart <span id="cartBadge" class="badge badge-light">0</span>
        </button>*@
        <partial name="_CartButton" />
    </li>
</ul>