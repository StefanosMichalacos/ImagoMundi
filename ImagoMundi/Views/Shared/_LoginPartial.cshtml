@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right postionFormLogout">
        <ul class="nav navbar-nav positionLoginPartial">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="loginStyle">Hello @UserManager.GetUserAsync(User).Result.FirstName!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link loginStyle">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <div class="navbar-right postionFormLogout">

        <ul class="nav navbar-nav positionLoginPartial">
            <li><a asp-area="Identity" asp-page="/Account/Register" class="loginStyle">Register</a></li>
            <li><a asp-area="Identity" asp-page="/Account/Login" class="loginStyle">Login</a></li>
        </ul>
    </div>
}